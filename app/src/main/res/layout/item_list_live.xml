<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_item_click_effect"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/margin_small"
              android:paddingLeft="@dimen/margin_medium"
              android:paddingRight="@dimen/margin_medium"
              android:paddingTop="@dimen/margin_small">

    <ImageView
            android:id="@+id/img_video_new"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_book_black_48dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_video_new_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorBlackKeyText"
                android:textSize="@dimen/titleTextSize"
                tool:text="@string/sample_title"/>

        <TextView
                android:id="@+id/tv_video_new_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorBlackContentText"
                android:textSize="@dimen/hintTextSize"
                tool:text="@string/sample_user_name"/>

        <RelativeLayout
                android:id="@+id/rl_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/btn_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_label"
                    android:button="@null"
                    android:paddingBottom="2dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:text="视频"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/hintTextSize"/>

            <TextView
                    android:id="@+id/btn_video_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_toRightOf="@+id/btn_video"
                    android:background="@drawable/bg_label"
                    android:button="@null"
                    android:paddingBottom="2dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:text="销售管理"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/hintTextSize"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>