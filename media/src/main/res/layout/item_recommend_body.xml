<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="@dimen/margin_small"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item_cover"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                tools:background="@android:color/black" />

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_item_cover"
                android:layout_margin="@dimen/margin_tiny"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorBlackContentText"
                android:textSize="@dimen/contentTextSize"
                tools:text="@string/sample_title" />

            <TextView
                android:id="@+id/tv_item_play"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/tv_item_title"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                android:drawablePadding="@dimen/margin_tiny"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/colorBlackHintText"
                android:textSize="@dimen/hintTextSize" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>